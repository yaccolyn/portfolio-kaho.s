<div class="container my-5">
  <div class="d-flex flex-column align-items-center text-center">
    <div class="flex-shrink-0 mb-3">
      <%= image_tag current_user.avatar.url, class: 'rounded-circle shadow-sm', size: '100x100' %>
    </div>
    <div class="flex-grow-1">
      <h5 class="mb-0"><%= current_user.name %></h5>
      <p class="text-muted mb-1"><%= current_user.email %></p>
      <%= link_to root_path, class: 'btn btn-custom btn-sm mt-4 mb-4' do %>
        <%= '編集' %>
      <% end %>
    </div>
  </div>
  <div class="card p-4 shadow-sm text-center">
    

    <ul class="nav nav-tabs justify-content-center mt-4" id="profile-tabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link link-blue active" id="post-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab" aria-controls="feedbacks" aria-selected="false">
          <%= '投稿' %>
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-blue" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites" type="button" role="tab" aria-controls="favorites" aria-selected="true">
          <%= 'お気に入り' %>
        </button>
      </li>
    </ul>

    <div class="tab-content mt-3">
      <div class="tab-content mt-3">
        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
          <% if @posts.present? %> <!-- @postsが存在するかを確認 -->
            <%= render partial: 'posts/post', collection: @posts, as: :post, remote: true %>
          <% else %>
            <p class="text-muted"><%= '投稿はありません' %></p>
          <% end %>
        </div>
      </div>

      <div class="tab-pane fade" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
    <% if @favorite_posts.present? %> <!-- お気に入りの投稿が存在する場合 -->
      <%= render partial: 'posts/post', collection: @favorite_posts, as: :post, remote: true %>
    <% else %>
      <p class="text-muted"><%= 'お気に入りはありません' %></p>
    <% end %>
  </div>
    </div>
  </div>
</div>