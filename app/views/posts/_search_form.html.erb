    <%= f.search_field :store_name_or_content_cont, class: 'form-control', placeholder: '店舗名/本文部分一致' %>
    <div class="input-group-append">
      <%= f.submit'検索', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>