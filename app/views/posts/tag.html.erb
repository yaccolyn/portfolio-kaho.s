<div class="container pt-5">
  <div class="row">
    <div class="col-10 mb-4 ms-auto">
      <h3 class="badge bg-warning me-2 mb-2" style="font-size: 1.5rem;"><%= @tag.name %></h3>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 mb-3">
        <%= render 'post', post: post %>
      </div>
    <% end %>
  </div>
</div>